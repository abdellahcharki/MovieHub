<%- include("./components/header")  %>

<div class="row">
        <form action="/upload" method="POST" class="mt-3 col" enctype="multipart/form-data" > 
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Title</label>
                    <input type="text" name="title" class="form-control" placeholder="film name">
                </div>
                <div class="form-group col-md-6">
                    <label>Category</label>
                    <select name="category" multiple  class="form-control">
                        <% for( let category of categorys ) { %><option value="<%=category %>"><%=category %></option><%}%>
                    </select>
                </div>
            </div>
            <div class="form-group ">
                <label>date of product </label>
                <input type="date"  name="productdate" class="form-control" id="">
            </div>
           
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>upload film </label>
                     <input type="file" id="film" name="film" class="form-control" id="">
                </div>
    
                <div class="form-group col-md-6">
                    <label>Image film</label>
                    <input type="file"  name="image"  class="form-control" >
                </div>
                
            </div>
    
            <div class="form-group ">
                <label>hestory</label>
                <textarea rows="3" class="form-control" name="hestory" placeholder="disc"></textarea>
            </div>
            <div>
                <input type="hidden" name="uid" value="<%=  isUser %>">
            </div>
            <button type="submit" class="btn btn-primary btn-block"> upload <i class="fas fa-upload"></i> </button>
        
        </form>
</div>

<%- include("./components/footer")  %>